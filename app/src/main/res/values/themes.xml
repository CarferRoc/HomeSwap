<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base sin tintes morados -->
    <style name="Base.Theme.HomeSwap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Desactivar el color de botones por defecto -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="android:colorButtonNormal">@android:color/white</item>
        <item name="android:colorAccent">@android:color/black</item>

        <!-- Evita el tinte automático de los botones de Material -->
        <item name="materialButtonStyle">@style/Widget.App.Button.NoTint</item>
    </style>

    <style name="Theme.HomeSwap" parent="Base.Theme.HomeSwap" />

    <!-- Estilo personalizado de botón sin tintes -->
    <style name="Widget.App.Button.NoTint" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
